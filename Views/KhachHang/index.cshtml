﻿@model List<CuaHang.Models.ThongTinKhachHang>
@using Kendo.Mvc.UI

@{
    ViewBag.Title = "Danh sách khách hàng";
}

<br>
<h2>Danh sách khách hàng</h2>
<a id="addCustomerButton" class='k-button' href='@Url.Action("Index", "ThemKhachHang")'>
    <span class="k-icon k-i-plus"></span>
</a>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@(Html.Kendo().Grid<CuaHang.Models.ThongTinKhachHang>()
    .Name("grid")
    .Columns(columns =>
    {
        columns.Bound(c => c.CustomerID).Title("Mã khách hàng").Width(150);
        columns.Bound(c => c.CustomerName).Title("Tên khách hàng").Width(250);
        columns.Bound(c => c.Phone).Title("Số điện thoại").Width(150);
        columns.Command(command =>
        {
            command.Custom("Edit").Click("editCustomer").Text("Thay đổi").HtmlAttributes(new { @class = "k-button k-button-info" });
            command.Destroy().HtmlAttributes(new { @class = "k-button k-button-error" }).Text("Xóa bỏ");
        }).Title("Hành động").Width(200);
    })
    .Pageable()
    .Sortable()
    .DataSource(dataSource => dataSource
        .Ajax()
        .Model(model => model.Id(c => c.CustomerID))
        .Read(read => read.Action("GetCustomers", "KhachHang"))
        .Destroy(destroy => destroy.Action("DeleteCustomer", "KhachHang"))
        .Events(events => events.Error("onDataSourceError")) // Attach error event
    )
)


@section scripts {
    <script>
        $(document).ready(function() {
            $("#addCustomerButton").kendoButton({
                icon: "plus",
                themeColor: "primary"
            });

            $(".k-button-info").kendoButton({
                themeColor: "info"
            });

            $(".k-button-error").kendoButton({
                themeColor: "error"
            });
        });

        function onDataSourceError(e) {
            console.log("Error event triggered:", e);

            if (e.errors) {
                var message = "";
                for (var key in e.errors) {
                    if (e.errors[key].errors) {
                        message += e.errors[key].errors.join("\n");
                    }
                }
                alert(message); // Display the error message
            } else {
                alert("An unexpected error occurred.");
            }

            // Refresh the grid to reflect the server state
            var grid = $("#grid").data("kendoGrid");
            grid.dataSource.read();
        }


        function editCustomer(e) {
            e.preventDefault();
            var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
            var url = '@Url.Action("Index", "ChinhSuaKhachHang", new { id = "__id__" })'.replace("__id__", dataItem.CustomerID);
            window.location.href = url;
        }

    </script>
}