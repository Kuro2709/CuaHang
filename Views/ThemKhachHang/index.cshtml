@model CuaHang.Models.ThongTinKhachHang

@{
    ViewBag.Title = "Thêm khách hàng";
}

<h2>Thêm khách hàng</h2>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}

<form method="post" action="/ThemKhachHang/Index">
    @Html.AntiForgeryToken()

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Mã khách hàng :</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="CustomerID" value="@Model.CustomerID" id="CustomerID" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Tên khách hàng:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="CustomerName" value="@Model.CustomerName" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Số điện thoại:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Phone" value="@Model.Phone" id="Phone" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Nhập tiếp</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Hủy</a>
        </div>
    </div>
</form>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#CustomerID').on('input', function () {
                var value = $(this).val().toUpperCase().replace(/\s/g, '');
                $(this).val(value);
            });

            $('#Phone').on('input', function () {
                var value = $(this).val().replace(/\D/g, '');
                $(this).val(value);
            });
        });
    </script>
}


