@model CuaHang.Models.ProductInfo

@{
    ViewBag.Title = "Chỉnh sửa sản phẩm";
}

<h2>Chỉnh sửa sản phẩm</h2>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}

<form method="post" action="/EditProduct/Index">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.ProductID)

        <div class="form-group">
            <label for="ProductName" class="control-label col-md-2">Tên sản phẩm</label>
            <div class="col-md-10">
                <input type="text" id="ProductName" name="ProductName" class="form-control" value="@Model.ProductName" />
                @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Price" class="control-label col-md-2">Giá</label>
            <div class="col-md-10">
                <input type="text" id="Price" name="Price" class="form-control" value="@Model.Price" />
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Quay lại", "Index", "Product")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}