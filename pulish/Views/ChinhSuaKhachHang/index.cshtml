@model CuaHang.Models.ThongTinKhachHang

@{
    ViewBag.Title = "Chỉnh sửa khách hàng";
}

<h2 style="text-align: center;">Chỉnh sửa khách hàng</h2>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" style="text-align: center;">@ViewBag.ErrorMessage</div>
}

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <div class="alert alert-success" style="text-align: center;">@ViewBag.SuccessMessage</div>
}

@using (Html.BeginForm("Index", "ChinhSuaKhachHang", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="k-form k-form-horizontal" style="max-width: 600px; margin: 0 auto;">
        <h4 style="text-align: center;">Khách hàng</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger", style = "text-align: center;" })

        @Html.HiddenFor(model => model.CustomerID)

        <div class="k-form-field" style="text-align: center;">
            @Html.LabelFor(model => model.CustomerName, "Tên khách hàng", new { @class = "k-label", style = "display: block; text-align: center;" })
            @Html.Kendo().TextBoxFor(model => model.CustomerName).HtmlAttributes(new { @class = "k-textbox", style = "width: 300px; margin: 0 auto;" })
            @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger", style = "text-align: center;" })
        </div>

        <div class="k-form-field" style="text-align: center;">
            @Html.LabelFor(model => model.Phone, "Điện thoại", new { @class = "k-label", style = "display: block; text-align: center;" })
            @Html.Kendo().MaskedTextBoxFor(model => model.Phone).Mask("(000) 000-0000").HtmlAttributes(new { @class = "k-textbox", style = "width: 300px; margin: 0 auto;" })
            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger", style = "text-align: center;" })
        </div>

        <div class="k-form-buttons" style="text-align: center; margin-top: 20px;">
            <div style="display: inline-block; margin-left: 200px;">
                <input type="submit" value="Lưu" class="k-button k-primary" style="width: 100px; margin-right: 10px;" />
                <a class="k-button k-secondary" href="@Url.Action("Index", "KhachHang")" style="width: 100px;">Hủy</a>
            </div>
        </div>
    </div>
}

<div style="text-align: center; margin-top: 20px;">
    @Html.ActionLink("Quay lại", "Index", "KhachHang", null, new { @class = "k-button k-secondary", style = "width: 100px;" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


