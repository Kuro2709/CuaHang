@model CuaHang.Models.ThongTinKhachHang

@{
    ViewBag.Title = "Thêm khách hàng";
}

<h2>Thêm khách hàng</h2>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}

@using (Html.BeginForm("Index", "ThemKhachHang", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row mb-3">
        @Html.LabelFor(model => model.CustomerID, "Mã khách hàng", new { @class = "col-sm-3 col-form-label" })
        <div class="col-sm-6">
            @Html.EditorFor(model => model.CustomerID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CustomerID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-3">
        @Html.LabelFor(model => model.CustomerName, "Tên khách hàng", new { @class = "col-sm-3 col-form-label" })
        <div class="col-sm-6">
            @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-3">
        @Html.LabelFor(model => model.Phone, "Số điện thoại", new { @class = "col-sm-3 col-form-label" })
        <div class="col-sm-6">
            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Thêm</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Hủy</a>
        </div>
    </div>
}
